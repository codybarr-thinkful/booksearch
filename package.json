{
	"name": "booksearch",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-scripts": "^3.2.0"
	},
	"scripts": {
		"watch:css": "postcss src/tailwind.css -o src/styles.css -w",
		"build:css": "postcss src/tailwind.css -o src/styles.css",
		"start": "yarn watch:css & react-scripts start",
		"build": "yarn build:css && react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"deploy": "yarn build && surge build/ booksearch-thinkful.surge.sh"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "^1.3.0",
		"add": "^2.0.6",
		"autoprefixer": "^9.7.1",
		"enzyme": "^3.10.0",
		"enzyme-adapter-react-16": "^1.15.1",
		"enzyme-to-json": "^3.4.3",
		"postcss-cli": "^6.1.3",
		"react-test-renderer": "^16.12.0",
		"tailwindcss": "^1.1.3",
		"yarn": "^1.22.0"
	}
}
